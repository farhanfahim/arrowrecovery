<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/x10dp"
        android:gravity="center"
        android:padding="@dimen/x15dp">


        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x10dp"
            android:background="@drawable/back"
            android:padding="@dimen/x10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Advanced Search"
            android:textColor="#000"
            android:textSize="@dimen/s15" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x10dp"
            android:background="@drawable/back"
            android:padding="@dimen/x10dp"
            android:visibility="invisible" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:padding="@dimen/x20dp">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/s20" />

            <LinearLayout
                android:id="@+id/contMake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_stroke_grey"
                android:gravity="center"
                android:visibility="visible">

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s5"
                    android:layout_weight="1"
                    android:id="@+id/txtMake"
                    android:hint="Select Make..."
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/c_black"
                    android:textColorHint="@color/c_black"
                    android:textSize="@dimen/s14"
                    app:typeface="@string/font_regular" />

                <ImageView
                    android:id="@+id/imgspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="Select category"
                    android:padding="@dimen/x10dp"
                    android:src="@drawable/spinner" />

            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/s20" />

            <LinearLayout
                android:id="@+id/contModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_stroke_grey"
                android:gravity="center"
                android:visibility="visible">

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s5"
                    android:layout_weight="1"
                    android:id="@+id/txtModel"

                    android:hint="Select Model..."
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/c_black"
                    android:textColorHint="@color/c_black"
                    android:textSize="@dimen/s14"
                    app:typeface="@string/font_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="Select model"
                    android:padding="@dimen/x10dp"
                    android:src="@drawable/spinner" />


            </LinearLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serial Year"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/s20" />

            <LinearLayout
                android:id="@+id/contYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_stroke_grey"
                android:gravity="center"
                android:visibility="visible">

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    android:id="@+id/txtYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s5"
                    android:layout_weight="1"
                    android:hint="Select Year..."
                    android:padding="10dp"

                    android:singleLine="true"
                    android:textColor="@color/c_black"
                    android:textColorHint="@color/c_black"
                    android:textSize="@dimen/s14"
                    app:typeface="@string/font_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="Select category"
                    android:padding="@dimen/x10dp"
                    android:src="@drawable/spinner" />

            </LinearLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serial Number"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/s20" />

            <LinearLayout
                android:id="@+id/mantracategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_stroke_grey"
                android:gravity="center"
                android:visibility="visible">

                <com.tekrevol.arrowrecovery.widget.AnyEditTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s5"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Enter Serial Number..."
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/c_black"
                    android:textColorHint="@color/c_black"
                    android:textSize="@dimen/s14"
                    app:typeface="@string/font_regular" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadowgrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_stroke_green"
                android:gravity="center"
                android:padding="@dimen/x20dp"
                android:text="Clear Selection"
                android:textColor="@color/green_bg"
                android:textSize="@dimen/s15" />

            <Button
                android:id="@+id/advSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/searchbar_grey"
                android:backgroundTint="@color/green_bg"
                android:gravity="center"
                android:padding="@dimen/x20dp"
                android:text="Search"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s15" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>