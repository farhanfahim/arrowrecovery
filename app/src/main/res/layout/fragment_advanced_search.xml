<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/x10dp"
        android:gravity="center"
    >


        <ImageButton
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x10dp"
            android:background="@drawable/back"
            android:padding="@dimen/x5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Advanced Search"
            android:textColor="#000"
            android:textSize="@dimen/s15" />

        <ImageButton
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x10dp"
            android:background="@drawable/back"
            android:padding="@dimen/x5dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/x10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Serial Number"
            android:textColor="@color/txtBlack"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/mantracategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_stroke_grey"
            android:gravity="center"
            android:visibility="visible">

            <com.tekrevol.arrowrecovery.widget.AnyEditTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Enter Serial Number..."
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/c_black"
                android:textColorHint="@color/c_black"
                android:textSize="12sp"
                app:typeface="@string/font_regular" />


        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Serial Year"
            android:textColor="@color/txtBlack"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_stroke_grey"
            android:gravity="center"
            android:visibility="visible">

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:id="@+id/txtmantracategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select Year..."
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/c_black"
                android:textColorHint="@color/c_black"
                android:textSize="12sp"
                app:typeface="@string/font_regular" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="Select category"
                android:padding="@dimen/x10dp"
                android:src="@drawable/spinner" />

        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Make"
            android:textColor="@color/txtBlack"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_stroke_grey"
            android:gravity="center"
            android:visibility="visible">

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select Make..."
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/c_black"
                android:textColorHint="@color/c_black"
                android:textSize="12sp"
                app:typeface="@string/font_regular" />

            <ImageView
                android:id="@+id/imgspinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="Select category"
                android:padding="@dimen/x10dp"
                android:src="@drawable/spinner" />

        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Model"
            android:textColor="@color/txtBlack"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_stroke_grey"
            android:gravity="center"
            android:visibility="visible">

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select Category..."
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/c_black"
                android:textColorHint="@color/c_black"
                android:textSize="12sp"
                app:typeface="@string/font_regular" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="Select model"
                android:padding="@dimen/x10dp"
                android:src="@drawable/spinner" />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>