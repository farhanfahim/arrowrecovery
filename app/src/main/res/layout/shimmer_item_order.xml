<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/x10dp"
        android:gravity="center"
        android:padding="@dimen/x10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5">

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:id="@+id/index"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x15dp"
                android:background="@color/material_grey400"
                android:ellipsize="end"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/material_grey400"
                app:typeface="@string/font_regular" />


            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:corner_radius="2dp">

                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/material_grey400"
                    android:scaleType="fitXY" />

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="@dimen/x5dp"
                android:layout_weight="2"
                android:gravity="center|start"
                android:orientation="vertical">

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x1dp"
                    android:background="@color/material_grey400"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="General Motors"
                    android:textColor="@color/material_grey400"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x1dp"
                    android:background="@color/material_grey400"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="General Motors"
                    android:textColor="@color/material_grey400"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/material_grey400"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="$254.89"
                    android:textColor="@color/material_grey400"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

            </LinearLayout>
        </LinearLayout>

        <com.tekrevol.arrowrecovery.widget.AnyTextView
            android:id="@+id/txtQtyAndPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x1dp"
            android:layout_weight="1"
            android:background="@color/material_grey400"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="@dimen/x3dp"
            android:paddingRight="@dimen/x3dp"
            android:text="580 x 2"
            android:textColor="@color/material_grey400"
            android:textSize="@dimen/s12"
            app:typeface="@string/font_regular" />


        <com.tekrevol.arrowrecovery.widget.AnyTextView
            android:id="@+id/txtTotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x1dp"
            android:layout_weight="1"
            android:background="@color/material_grey400"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="@dimen/x3dp"
            android:paddingRight="@dimen/x3dp"
            android:text="$1160"
            android:textColor="@color/material_grey400"
            android:textSize="@dimen/s12"
            app:typeface="@string/font_regular" />

        <com.tekrevol.arrowrecovery.widget.AnyTextView
            android:id="@+id/txtQuality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/material_grey400"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="@dimen/x3dp"
            android:paddingRight="@dimen/x3dp"
            android:text="75%"
            android:textColor="@color/material_grey400"
            android:textSize="@dimen/s12"
            app:typeface="@string/font_regular" />


    </LinearLayout>


</RelativeLayout>