<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutItemSearchBar"
    android:background="@color/c_white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/x10dp"
        android:id="@+id/contSearch"
        android:background="@color/c_white"
        android:elevation="@dimen/x5dp"
        android:gravity="center"
        android:padding="10dp"
        app:corner_radius="@dimen/x5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="5dp"
                app:corner_radius="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img"
                    android:scaleType="fitCenter"
                    android:src="@drawable/clip" />

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    app:typeface="@string/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:id="@+id/txtRef"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="034311"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/_10ssp" />

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    app:typeface="@string/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:id="@+id/txtName"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="General Motors"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/_10ssp"/>

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    app:typeface="@string/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="$254.89"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>