<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tekrevol.arrowrecovery.widget.AnyTextView
        app:typeface="@string/font_regular"
        android:layout_width="match_parent"
        android:textSize="@dimen/s14"
        android:id="@+id/txtSearched"
        android:padding="@dimen/x5dp"
        android:layout_marginTop="@dimen/x10dp"
        android:layout_marginRight="@dimen/x30dp"
        android:layout_marginLeft="@dimen/x30dp"
        android:text="abc"
        android:maxLines="1"
        android:minLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:textColor="@color/title_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_grey"/>

</LinearLayout>