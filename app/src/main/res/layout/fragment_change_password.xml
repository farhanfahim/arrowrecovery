<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white">


    <LinearLayout

        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_back"
                android:contentDescription="back" />


        </LinearLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_fullname_login"
            android:layout_marginBottom="@dimen/x10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/input_fullname_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Password"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/title_color"

                android:textColorHint="@color/txtGrey"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_password_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60dp"
            android:layout_marginTop="@dimen/x10dp"
            android:layout_marginBottom="@dimen/x10dp"

            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/input_password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/title_color"

                android:textColorHint="@color/txtGrey"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="@dimen/x10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60dp"
            android:layout_marginTop="@dimen/x10dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/title_color"

                android:textColorHint="@color/txtGrey"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginTop="@dimen/x20dp"
            android:id="@+id/txtLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/searchbar_grey"
            android:backgroundTint="@color/green_bg"
            android:gravity="center"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="@color/c_white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
