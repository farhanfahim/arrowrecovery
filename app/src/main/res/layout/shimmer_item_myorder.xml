<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemMyOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white"
    android:orientation="vertical">


    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/x10dp"
        android:background="@color/c_white"
        android:elevation="@dimen/x5dp"
        android:gravity="center"
        android:padding="20dp"
        app:corner_radius="@dimen/x5dp">


        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            app:corner_radius="2dp">

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/material_grey400"
                android:scaleType="fitXY"
                android:src="@drawable/greycircle"/>

        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:orientation="vertical">



            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/x1dp"
                android:id="@+id/txtUserName"
                android:minLines="1"
                android:background="@color/material_grey400"
                android:text="-------"
                android:textColor="@color/material_grey400"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/x1dp"
                android:gravity="center|start"
                android:maxLines="1"
                android:background="@color/material_grey400"
                android:id="@+id/txtAddress"
                android:minLines="1"
                android:text="New York, USA"
                android:textColor="@color/material_grey400"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:background="@color/material_grey400"
                android:maxLines="1"
                android:minLines="1"
                android:id="@+id/txtPhone"
                android:text="+44 123 456 1"
                android:textColor="@color/material_grey400"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="123"
                android:background="@color/material_grey400"
                android:id="@+id/txtTotalPrice"
                android:minLines="1"
                android:textColor="@color/material_grey400"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:background="@color/material_grey400"
                android:minLines="1"
                android:id="@+id/txtDate"
                android:text="+44 123 456 1"
                android:textColor="@color/material_grey400"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:background="@color/material_grey400"
                android:minLines="1"
                android:text="pending"
                android:textColor="@color/material_grey400"
                android:textAlignment="center"
                android:id="@+id/txtStatus"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

        </LinearLayout>


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10dp"
            android:padding="4dp"
            android:background="@color/material_grey400"
            android:layout_marginRight="@dimen/x10dp"
            android:gravity="center|start" />

    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


</RelativeLayout>