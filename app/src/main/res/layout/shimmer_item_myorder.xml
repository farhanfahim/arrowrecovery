<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemMyOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white"
    android:orientation="vertical">


    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="@dimen/x10dp"
        android:background="@color/c_white"
        android:elevation="@dimen/x5dp"
        android:gravity="center"
        android:padding="20dp"
        app:corner_radius="@dimen/x5dp">


        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:corner_radius="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/c_light_grey" />

        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="vertical">

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                app:typeface="@string/font_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:text="-----"
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                app:typeface="@string/font_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:text="-----"
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                app:typeface="@string/font_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:text="-----"
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:gravity="center|start"
            android:orientation="vertical">

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                app:typeface="@string/font_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"

                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:text="---"
                android:textSize="@dimen/s12" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                app:typeface="@string/font_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:text="-----------"
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12" />

            <com.tekrevol.arrowrecovery.widget.AnyTextView
                app:typeface="@string/font_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:text="---"
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12" />

        </LinearLayout>


        <com.tekrevol.arrowrecovery.widget.AnyTextView
            app:typeface="@string/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:text="----"
            android:textColor="@color/green_bg" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:gravity="center|start"
            android:src="@drawable/next" />

    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


</LinearLayout>