<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemMyOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white"
    android:orientation="vertical">


    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/x10dp"
        android:background="@color/c_white"
        android:elevation="@dimen/x5dp"
        android:gravity="center"
        android:padding="20dp"
        app:corner_radius="@dimen/x5dp">


        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            app:corner_radius="2dp">

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/approved" />

        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">
            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:text=""
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />


            <com.tekrevol.arrowrecovery.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:id="@+id/txtOrderid"
                android:minLines="1"
                android:text=""
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="status: "
                    android:textColor="@color/txtDarkGrey"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />


                <com.tekrevol.arrowrecovery.widget.AnyTextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text=""
                    android:textColor="@color/txtDarkGrey"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />
            </LinearLayout>


        </LinearLayout>


