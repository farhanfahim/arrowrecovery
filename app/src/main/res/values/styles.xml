    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="colorAccent">#6C0A09</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/base_amber</item>
        <item name="colorControlHighlight">@color/base_amber</item>

<!--        <item name="android:statusBarColor">@color/colorPrimaryDark</item>-->
<!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
<!--        <item name="android:windowBackground">@color/colorPrimaryDark</item>-->
    </style>

    <!-- Other Activities theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

<!--        <item name="android:statusBarColor">@color/colorPrimaryDark</item>-->
<!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

    </style>

    <style name="SplashActivtyKotlin" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppThemeTransparentBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/c_white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/base_amber</item>
        <item name="colorControlHighlight">@color/base_amber</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!--<item name="android:windowIsTranslucent">true</item>-->


    <!-- Custom Dialog Themes-->

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="windowMinWidthMajor">90%</item>
    </style>


    <style name="Item.padding_form_field" parent="Theme.AppCompat">
        <item name="android:paddingRight">@dimen/x5dp</item>
        <item name="android:paddingLeft">@dimen/x5dp</item>
        <item name="android:paddingBottom">@dimen/x8dp</item>
        <item name="android:paddingTop">@dimen/x8dp</item>
    </style>




